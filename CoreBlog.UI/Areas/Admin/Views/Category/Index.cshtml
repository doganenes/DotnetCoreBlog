@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<CoreBlog.EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Kategori Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>    
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-warning">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-success">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-info">Düzenle</a></td>
        </tr>

    }
</table>

<br />

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Category", "Admin", new { page }))