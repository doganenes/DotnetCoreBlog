@model UserSignupViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/InspinaTemplate/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/InspinaTemplate/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/InspinaTemplate/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/InspinaTemplate/css/animate.css" rel="stylesheet">
    <link href="~/InspinaTemplate/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">
    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h3 class="logo-name">ED+</h3>

            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni bir hesap oluşturun.</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="@Model.NameSurname">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger text-left"></span>
                </div>
                
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" asp-for="@Model.Mail">
                    <span asp-validation-for="@Model.Mail" class="text-danger text-left"></span>
                </div>
                
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Şifre" required="" asp-for="@Model.Password">
                    <span asp-validation-for="@Model.Password" class="text-danger text-left"></span>
                </div>
                
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Şifre Tekrar" required="" asp-for="@Model.ConfirmPassword">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger text-left"></span>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Kullanıcı Adınız" required="" asp-for="@Model.Username">
                    <span asp-validation-for="@Model.Username" class="text-danger text-left"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanım şartlarını okudum, kabul ediyorum. </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">Giriş Yap</a>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
            <p class="m-t"> <small>ASP.NET Core Proje Kampı | Tüm hakları saklıdır. &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/InspinaTemplate/js/jquery-3.1.1.min.js"></script>
    <script src="~/InspinaTemplate/js/popper.min.js"></script>
    <script src="~/InspinaTemplate/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/InspinaTemplate/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>
</html>