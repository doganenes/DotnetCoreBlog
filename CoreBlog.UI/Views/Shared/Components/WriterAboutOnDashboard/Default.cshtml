@using CoreBlog.EntityLayer.Concrete
@model List<Writer>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                <div class="d-flex">
                    @foreach (var item in Model)
                    {
                        <div class="d-flex mt-2 align-items-top w-100">
                            <img src="~/@item.WriterImage" alt="Yazar Fotoğrafı" class="mr-3"/>
                            <div class="mb-0 flex-grow">
                                <h5 class="mr-2 mb-2">@item.WriterName - @item.WriterMail</h5>
                                <p class="mb-0 font-weight-light">@item.WriterAbout</p>
                            </div>
                            <div class="ml-auto">
                                <i class="mdi mdi-heart-outline text-muted"></i>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
